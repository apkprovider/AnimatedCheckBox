<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <com.apkprovider.animatedcheckBox.customcheckbox.AnimatedCheckBox
              android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_margin="1dp"
              android:layout_height="wrap_content"
              app:stroke_width="2dp"
              app:stroke_color="#607D8B"
              app:circle_color="#666699"/>

          <com.apkprovider.animatedcheckBox.customcheckbox.AnimatedCheckBox
              android:id="@+id/checkbox_1"
              android:layout_gravity="center_horizontal"
              android:layout_width="60dp"
              android:padding="4dp"
              android:layout_height="60dp"
              app:stroke_width="3dp"
              app:stroke_color="#9C27B0"
              app:circle_color="#00CC66"/>

          <com.apkprovider.animatedcheckBox.customcheckbox.AnimatedCheckBox
              android:layout_gravity="center_horizontal"
              android:layout_width="80dp"
              android:padding="4dp"
              android:layout_height="wrap_content"
              app:stroke_width="4dp"
              app:stroke_color="#2196F3"
              app:circle_color="#A34747"/>

          <com.apkprovider.animatedcheckBox.customcheckbox.AnimatedCheckBox
              android:id="@+id/checkbox_2"
              android:layout_gravity="center_horizontal"
              android:layout_width="100dp"
              android:padding="4dp"
              android:layout_height="wrap_content"
              app:stroke_width="4dp"
              app:stroke_color="#009688"
              app:circle_color="#CC9900"/>

          <com.apkprovider.animatedcheckBox.customcheckbox.AnimatedCheckBox
              android:layout_gravity="center_horizontal"
              android:layout_width="120dp"
              android:padding="6dp"
              android:layout_height="wrap_content"
              app:stroke_width="4dp"
              app:stroke_color="#512DA8"
              app:circle_color="#DB4D94"/>



      </LinearLayout>

        <TextView
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/apkProviderColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/poweredby"
            android:textSize="16dp"/>


</RelativeLayout>
